<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".Register">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:background="@mipmap/bettertorch"
        android:fillViewport="false"
        android:orientation="vertical"
        android:padding="10dp">

        <GridLayout
            android:id="@+id/GridLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="1">

            <TextView
                android:id="@+id/textView3"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="5"
                android:text="Password"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ID"
                    android:layout_width="106dp"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="ID"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="ID"
                    android:inputType="number" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="4"
                android:text="Email"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/textView5"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="3"
                android:text="Last Name"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="2"
                android:text="First Name"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/first"
                android:layout_width="188dp"
                android:layout_column="0"
                android:layout_gravity="right|top"
                android:layout_row="2"
                android:ems="10"
                android:hint="first name">

            </EditText>

            <EditText
                android:id="@+id/Last_Name"
                android:layout_width="187dp"
                android:layout_column="0"
                android:layout_gravity="right|top"
                android:layout_row="3"
                android:ems="10"
                android:hint="last name" />

            <EditText
                android:id="@+id/Email"
                android:layout_width="187dp"
                android:layout_column="0"
                android:layout_gravity="right|top"
                android:layout_row="4"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/Pass"
                android:layout_width="192dp"
                android:layout_column="0"
                android:layout_gravity="right|top"
                android:layout_row="5"
                android:ems="10"
                android:hint="password" />

            <TextView
                android:id="@+id/textView2"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="6"
                android:paddingTop="40dp"
                android:text="What is your specialty"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RadioGroup
                android:id="@+id/radiogroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/Media"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="left|top"
                    android:layout_row="11"
                    android:text="Media" />

                <RadioButton
                    android:id="@+id/Chemistry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="left|top"
                    android:layout_row="10"
                    android:text="Chemistry" />

                <RadioButton
                    android:id="@+id/Biology"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="left|top"
                    android:layout_row="9"
                    android:text="Biology" />

                <RadioButton
                    android:id="@+id/Computer_Seince"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="left|top"
                    android:layout_row="8"
                    android:text="Computer Seince" />

                <RadioButton
                    android:id="@+id/Physics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="left|top"
                    android:layout_row="7"
                    android:text="Physics" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView1"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="12"
                android:text="How many english points"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RadioGroup
                android:id="@+id/englishpoints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/eng4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="left|top"
                    android:layout_row="13"
                    android:text="4 Points" />

                <RadioButton
                    android:id="@+id/eng5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="left|top"
                    android:layout_row="14"
                    android:text="5 Points" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView7"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="15"
                android:text="How many math points"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RadioGroup
                android:id="@+id/mathpoints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/math4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="left|top"
                    android:layout_row="16"
                    android:text="4 points" />

                <RadioButton
                    android:id="@+id/math5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="left|top"
                    android:layout_row="17"
                    android:text="5 points" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView8"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="18"
                android:text="Grade:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/Grade"
                android:layout_width="227dp"
                android:layout_column="0"
                android:layout_gravity="right|top"
                android:layout_row="18"
                android:ems="10"
                android:hint="grade"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView9"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="0"
                android:text="Already have an account?"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/btpicker"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="1"
                android:text="Login" />

            <Button
                android:id="@+id/btsubmit"
                android:layout_column="0"
                android:layout_gravity="center_horizontal|top"
                android:layout_row="19"
                android:text="Submit" />
        </GridLayout>

    </ScrollView>
</LinearLayout>